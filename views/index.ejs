<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Katalog Buku</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px 0;
            border-radius: 0 0 20px 20px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">ðŸ“š MyLibrary</a>
            <div class="ms-auto text-light">
                <% if (user) { %>
                    <span>Halo, <b>
                            <%= user %>
                        </b></span>
                    <a href="/books/add" class="btn btn-sm btn-outline-success ms-2">+ Tambah Buku</a>
                    <a href="/auth/logout" class="btn btn-sm btn-outline-danger ms-2">Logout</a>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-sm btn-primary">Login</a>
                        <% } %>
            </div>
        </div>
    </nav>

    <div class="hero text-center">
        <div class="container">
            <h1>Katalog Koleksi Buku</h1>
            <p>Kelola daftar buku favoritmu dengan mudah</p>
        </div>
    </div>

    <div class="container my-5">
        <!-- Mulai perulangan untuk menampilkan setiap buku dari database -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% books.forEach(book=> { %>
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <!-- Jika buku ada link gambarnya, tampilkan gambar dari S3 -->
                        <% if (book.image_url) { %>
                            <img src="<%= book.image_url %>" class="card-img-top" alt="<%= book.title %>"
                                style="height: 200px; object-fit: cover;">
                            <% } else { %>
                                <!-- Jika tidak ada gambar, tampilkan kotak abu-abu -->
                                <div class="bg-secondary text-white text-center py-5">No Image</div>
                                <% } %>
                                    <div class="card-body">
                                        <h5 class="card-title text-primary">
                                            <%= book.title %>
                                        </h5>
                                        <p class="card-text text-muted">Ditulis oleh: <strong>
                                                <%= book.author %>
                                            </strong></p>
                                        <p class="card-text small">Tahun: <%= book.year %>
                                        </p>
                                    </div>
                                    <div class="card-footer bg-white border-0 text-center pb-3">
                                        <!-- Tombol Edit & Hapus hanya muncul jika user sudah login -->
                                        <% if (user) { %>
                                            <div class="d-grid gap-2">
                                                <a href="/books/edit/<%= book.id %>"
                                                    class="btn btn-sm btn-outline-primary">Edit</a>
                                                <form action="/books/delete/<%= book.id %>" method="POST"
                                                    onsubmit="return confirm('Hapus buku ini?')">
                                                    <button type="submit"
                                                        class="btn btn-sm btn-danger w-100">Hapus</button>
                                                </form>
                                            </div>
                                            <% } %>
                                    </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
</body>

</html>